extends ../layout/index

block contenido 
    
    section(id="" class="seccion seccion-login"  style="--img:url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTbfDAWy8FhkWk5-3vUSDWnR6FMjFKKPiMN-Q&s')")

        h1(class="titulo-pagina anton-sc-regular")= pagina

        div(class="formulario-container")
            form(action="/gimnasio/login" method="POST" id="formularioLogin" class="formularios")
                input(type="hidden" name="_csrf" value=csrfToken)

                div(class="input-container") 
                    input(type="text" name="usuario" value= administrador ? administrador.usuario : '')
                    label(for="nombre") Usuario: 
                    if mensajeUsuario
                        p(class="mensaje-error")= mensajeUsuario.msg
                div(class="input-container") 
                    input(type="password" name="password")
                    label(for="password") Contrase√±a: 
                    if mensajePassword
                        p(class="mensaje-error")= mensajePassword.msg

                input(type="submit" value="Ingresar" class="boton-inicio boton-login")

block scripts 
    script(src="/js/validacionForms.js")